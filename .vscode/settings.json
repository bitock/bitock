{
	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"window.closeWhenEmpty": false,
	"window.confirmSaveUntitledWorkspace": true,
	"window.density.editorTabHeight": "default",
	"window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",
	"window.titleSeparator": " - ",
	"window.zoomLevel": 3,
	"window.zoomPerWindow": false,

	"workbench.activityBar.location": "hidden",
	"workbench.colorTheme": "Default Light Modern",
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.editor.showIcons": true,
	"workbench.editor.showTabs": "multiple",
	"workbench.editor.tabActionCloseVisibility": false,
	"workbench.editor.tabSizing": "fit",
	"workbench.editor.wrapTabs": false,
	"workbench.layoutControl.enabled": false,
	"workbench.sideBar.location": "left",
	"workbench.statusBar.visible": false,

	"explorer.autoOpenDroppedFile": true,
	"explorer.autoReveal": true,
	"explorer.autoRevealExclude": { "**/node_modules": true, "**/bower_components": true },
	"explorer.compactFolders": true,
	"explorer.confirmDelete": true,
	"explorer.confirmDragAndDrop": true,
	"explorer.confirmPasteNative": true,
	"explorer.confirmUndo": "default",
	"explorer.copyPathSeparator": "/",
	"explorer.copyRelativePathSeparator": "auto",
	"explorer.decorations.badges": true,
	"explorer.decorations.colors": true,
	"explorer.enableDragAndDrop": true,
	"explorer.enableUndo": true,
	"explorer.excludeGitIgnore": false,
	"explorer.expandSingleFolderWorkspaces": true,
	"explorer.fileNesting.enabled": false,
	"explorer.fileNesting.expand": true,
	"explorer.fileNesting.patterns": { "*.ts": "${capture}.js", "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts", "*.jsx": "${capture}.js", "*.tsx": "${capture}.ts", "tsconfig.json": "tsconfig.*.json", "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock" },
	"explorer.incrementalNaming": "simple",
	"explorer.openEditors.minVisible": 0,
	"explorer.openEditors.sortOrder": "editorOrder",
	"explorer.openEditors.visible": 9,
	"explorer.sortOrder": "default",
	"explorer.sortOrderLexicographicOptions": "default",
	"explorer.sortOrderReverse": false,

	"search.exclude": { "**/node_modules": true, "**/bower_components": true, "**/*.code-search": true },

	"extensions.ignoreRecommendations": true,

	"breadcrumbs.enabled": false,

	"editor.autoIndent": "none",
	"editor.detectIndentation": false,
	"editor.fontSize": 13,
	"editor.insertSpaces": false,
	"editor.indentSize": "tabSize",
	"editor.lineHeight": 0,
	"editor.lineNumbers": "on",
	"editor.minimap.enabled": true,
	"editor.minimap.autohide": "scroll",
	"editor.minimap.scale": 1,
	"editor.showFoldingControls": "always",
	"editor.tabSize": 4,
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 80,

	"terminal.explorerKind": "both",
	"terminal.integrated.defaultLocation": "editor",
	"terminal.integrated.defaultProfile.linux": null,
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.suggest.enabled": false,

	"files.associations": { "*.txt": "plaintext", "*.aspx": "plaintext" },
	"files.autoGuessEncoding": false,
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 1000,
	"files.enableTrash": true,
	"files.eol": "\n",
	"files.exclude": { "**/.git": false, "**/.svn": false, "**/.hg": false, "**/CVS": false, "**/.DS_Store": false, "**/Thumbs.db": false },
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"files.watcherExclude": { "**/.git/objects/**": true, "**/.git/subtree-cache/**": true, "**/.hg/store/**": true },
	"files.watcherInclude": [],

	"task.problemMatchers.neverPrompt": { "shell": true },

	"git.enabled": false,
	"git.ignoreLimitWarning": true,
	"git.openRepositoryInParentFolders": "never",
}
